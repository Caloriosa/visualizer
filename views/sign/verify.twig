{% extends 'layout.twig' %} 

{% block body %}
<div class="container mt-4">
  <h2>Verify your email</h2>
  <p class="lead">Verify email address and activate your account!</p>
  <ol class="steps">
    <li>
      <i class="fa fa-id-card-o" aria-hidden="true"></i>
      <strong class="step">Step 1:</strong>
      Create account
    </li>
    <li class="current">
      <i class="fa fa-check-square-o" aria-hidden="true"></i>
      <strong class="step">Step 2:</strong>
      Verify your email
    </li>
    <li>
      <i class="fa fa-sign-in" aria-hidden="true"></i>
      <strong class="step">Step 3:</strong>
      Sign in & create your first device
    </li>
  </ol>
  {% include 'snippets/flashes.twig' %}
  <div class="row">
    <div class="col-12 col-md-7">
      <form class="{% if errors %} was-validated{% endif %}" action="/sign/verify" method="post" id="register-form" novalidate>
        {% if errors %}
        {% for error in errors %}
        <div class="alert alert-danger">
          {{error.msg}}
        </div>
        {% endfor %}
        {% endif %}
        <div class="row">
          <label class="col-12 col-md-3 col-form-label" for="activation-code">Activation code: </label>
          <div class="col-12 col-md-9 form-group">
            <input type="text" class="form-control" name="activation-code" id="activation-code" placeholder="Put your activation code" required>
            <div class="invalid-feedback">
              Invalid activation code!
            </div>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-12 text-right">
            <button type="submit" class="btn btn-primary">Activate</button>
            <a class="btn btn-outline-secondary" href="resend">Resend e-mail</a>
          </div>
        </div>
      </form>
      <p class="mt-4 text-muted">Check your email-address for activation code. No email recieved? Please wait few minutes, emails can be delayed. Still not recieved? Check your spam folder or <a href="resend">Resend activation code</a>.</p>
    </div>
    <div class="col-md d-none d-md-block text-center m-auto">
      <img src="data:image/svg+xml;utf8;base64," />    
    </div>
  </div>
</div>
{% endblock %}