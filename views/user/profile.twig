{% extends 'layout.twig' %}

{% block body %}
<div class="user-profile">
  <div class="profile-header">
    <div class="container">
      <div class="avatar-area">
       <img class="profile-pic" width="100" height="100" alt="" src="data:image/svg+xml;utf8;base64," />
      </div>
      <h4 class="user-name">{% if user.name %}{{user.name}}{% else %}{{user.login}}{% endif %}</h4>
    </div>
  </div>
  <div class="profile-tabs">
    <div class="container">
      <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="true">Profile</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="devices-tab" data-toggle="tab" href="#devices" role="tab" aria-controls="devices" aria-selected="false">Devices</a>
        </li>
      </ul>
    </div>
  </div>
  <div class="profile-content">
    <div class="container">
      <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="profile" role="tabpanel" aria-labelledby="profile-tab">
          <div class="row">
            <div class="col-12 col-md-8">
              <h2>Profile info</h2>
              <table class="table">
                <tbody>
                  <tr>
                    <th scope="row">Login</th>
                    <td>{{user.login}}</td>
                  </tr>
                  <tr>
                    <th scope="row">Full name</th>
                    <td>{{user.name}}</td>
                  </tr>
                  {% if loggedUser.uid == user.uid %}
                  <tr>
                    <th scope="row">Email</th>
                    <td>{{user.email}}<td>
                  </tr>
                  {% endif %}
                  <tr>
                    <th scope="row">CreatedAt</th>
                    <td>{{user.createdAt|date("jS F Y - H:m")}}</td>
                  </tr>
                  <tr>
                    <th scope="row">Account active</th>
                    <td>{% if user.activated %}Yes{% else %}No{% endif %}</td>
                  </tr>
                </tbody>
              </table>
            </div>
            <div class="col-12 col-md-4 stat-cards-slot">
              <div class="card stat-card bg-success">
                <div class="card-body">
                  <span class="title">25Â°C</span>
                  <span class="subtitle">Inside</span>
                </div>
                <div class="card-icon">
                  <i class="fa fa-thermometer-three-quarters" aria-hidden="true"></i>
                </div>
              </div>
              <div class="card stat-card bg-info">
                <div class="card-body">
                  <span class="title">4</span>
                  <span class="subtitle">Devices</span>
                </div>
                <div class="card-icon">
                  <i class="fa fa-microchip" aria-hidden="true"></i>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="tab-pane fade" id="devices" role="tabpanel" aria-labelledby="devices-tab">
          <h2>{% if user.name %}{{user.name}}{% else %}{{user.login}}{% endif %}'s devices</h2>
          <table class="table">
            <thead class="thead-dark">
              <tr>
                <th scope="col">#</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Username</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <th scope="row">1</th>
                <td>Mark</td>
                <td>Otto</td>
                <td>@mdo</td>
              </tr>
              <tr>
                <th scope="row">2</th>
                <td>Jacob</td>
                <td>Thornton</td>
                <td>@fat</td>
              </tr>
              <tr>
                <th scope="row">3</th>
                <td>Larry</td>
                <td>the Bird</td>
                <td>@twitter</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
